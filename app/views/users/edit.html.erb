<html>
  <head>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/animate.css">
    <style>.wow:first-child {visibility: hidden;}</style>
    <title>IdeaTouch</title>
  </head>

  <body>
    <div class="preload"></div>
    <div class="content">
      <%= render './dynamics/formTopBar' %>
      <br><br><br>
      <div class="box-wall">   
        <div class="box-wall-text">
          <h3><i class="fa fa-user"></i></h3>
          <div class="serif">
            <% if @user.errors.full_messages.any? %>
              <% @user.errors.full_messages.each do |error_message| %>
                <%= error_message if @user.errors.full_messages.first == error_message %> <br />
              <% end %>
            <% end %>
            <%= form_for :user , :html => { :multipart => true }, url: user_update_path(:id=>params[:id]), method: :patch  do |f| %>
            <%= render partial: '/users/form_edit' , :locals=>{:f=>f}  %>
            <% end %>
            <br>
          </div>
        </div>
      </div>
    </div>

    <script src="js/wow.js"></script>
    <script>wow = new WOW({animateClass:'animated',offset:100,
      callback:function(box){console.log("WOW: animating <" + box.tagName.toLowerCase() + ">")}});
      wow.init();
      document.getElementById('moar').onclick = function() {
        var section = document.createElement('section');
        section.className = 'section--purple wow fadeInDown';
        this.parentNode.insertBefore(section, this);};
    </script>
    <script>
      $(function() {
        $(".preload").fadeOut(10, function() {
          $(".content").fadeIn(10);        
        });
      });
    </script>
    <script>
      $('.submit_me').click(function() {
        $('form').submit();
        return false;
      });
    </script>
  </body>
</html>
